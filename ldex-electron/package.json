{
  "name": "ldex-electron",
  "version": "1.7.0",
  "private": true,
  "homepage": "./",
  "main": "build/electron.js",
  "author": "Jax, Jong, sacOO7",
  "description": "LDEX UI app for exchanging tokens with sidechains",
  "dependencies": {
    "assert": "^2.1.0",
    "axios": "^0.21.1",
    "buffer": "^6.0.3",
    "cors-anywhere": "^0.4.4",
    "crypto-browserify": "^3.12.0",
    "ldex-ui-ark-adapter": "^4.3.3",
    "ldex-ui-ldpos-adapter": "^5.0.2",
    "ldex-ui-lisk-adapter": "^1.2.0",
    "ldex-ui-lisk-v3-adapter": "^1.4.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^5.0.1",
    "recharts": "^2.1.13",
    "runtypes": "^6.4.1",
    "sodium-native": "^3.4.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.3",
    "util": "^0.12.5"
  },
  "scripts": {
    "electron": "electron .",
    "start": "./node_modules/webpack-cli/bin/cli.js serve --config ./webpack.config.js",
    "start-prod": "NODE_ENV='production' ./node_modules/webpack-cli/bin/cli.js serve --config ./webpack.config.js",
    "build-dev": "./node_modules/webpack-cli/bin/cli.js --config ./webpack.config.js",
    "build-prod": "NODE_ENV='production' ./node_modules/webpack-cli/bin/cli.js --config ./webpack.config.js",
    "test": "react-scripts test src/tests",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "multi-dist": "electron-builder -mwl",
    "spawn-interactive-packaging-env": "./docker-electron-env.sh"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "es6": true
    },
    "parser": "babel-eslint",
    "rules": {
      "max-len": "off",
      "no-underscore-dangle": "off",
      "no-await-in-loop": "off",
      "react/sort-comp": "off",
      "react/destructuring-assignment": "off",
      "no-param-reassign": "off",
      "no-continue": "off",
      "no-restricted-syntax": "off",
      "react/static-property-placement": "off",
      "react/prop-types": "off",
      "consistent-return": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0",
    "html-webpack-plugin": "^5.5.3",
    "react-error-overlay": "^6.0.9",
    "source-map-loader": "^4.0.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "resolutions": {
    "//": "See https://github.com/facebook/create-react-app/issues/11773",
    "react-error-overlay": "6.0.9"
  }
}
